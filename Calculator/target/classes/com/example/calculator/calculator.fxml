         <Button fx:id="buttonthree" mnemonicParsing="false" onAction="#setthree" prefHeight="88.0" prefWidth="166.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         <Button fx:id="buttonzero" mnemonicParsing="false" onAction="#setzero" prefHeight="74.0" prefWidth="160.0" text="0" GridPane.rowIndex="3" />
         <Button fx:id="buttonadd" mnemonicParsing="false" onAction="#add" prefHeight="94.0" prefWidth="174.0" text="Add" GridPane.columnIndex="3">
            <font>
               <Font size="18.0" />
            </font></Button>
         <Button fx:id="buttonsubtract" mnemonicParsing="false" onAction="#sub" prefHeight="74.0" prefWidth="170.0" text="Subtract" GridPane.columnIndex="3" GridPane.rowIndex="1">
            <font>
               <Font size="18.0" />
            </font></Button>
         <Button fx:id="buttonmultiply" mnemonicParsing="false" onAction="#multi" prefHeight="80.0" prefWidth="138.0" text="Multiply" GridPane.columnIndex="3" GridPane.rowIndex="2">
            <font>
               <Font size="18.0" />
            </font></Button>
         <Button fx:id="buttondelete" mnemonicParsing="false" onAction="#del" prefHeight="71.0" prefWidth="153.0" text="Delete" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Label fx:id="current" alignment="CENTER" contentDisplay="CENTER" prefHeight="62.0" prefWidth="122.0" text="current #" GridPane.columnIndex="2" GridPane.rowIndex="3">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <Button fx:id="buttondivide" mnemonicParsing="false" onAction="#div" prefHeight="97.0" prefWidth="162.0" text="Divide" GridPane.columnIndex="3" GridPane.rowIndex="3">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
      </children>
   </GridPane>
</VBox>
