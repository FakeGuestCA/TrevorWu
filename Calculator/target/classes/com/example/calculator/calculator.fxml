    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="showtotal" alignment="CENTER" prefHeight="71.0" prefWidth="166.0" text="0">
      <font>
         <Font size="36.0" />
      </font></Label>
   <GridPane alignment="CENTER" prefHeight="225.0" prefWidth="468.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Button fx:id="buttonseven" onAction="#setseven" prefHeight="80.0" prefWidth="140.0" text="7" />
         <Button fx:id="buttoneight" mnemonicParsing="false" onAction="#seteight" prefHeight="69.0" prefWidth="135.0" text="8" GridPane.columnIndex="1" />
         <Button fx:id="buttonnine" mnemonicParsing="false" onAction="#setnine" prefHeight="73.0" prefWidth="145.0" text="9" GridPane.columnIndex="2" />
         <Button fx:id="buttonfour" mnemonicParsing="false" onAction="#setfour" prefHeight="71.0" prefWidth="151.0" text="4" GridPane.rowIndex="1" />
         <Button fx:id="buttonfive" mnemonicParsing="false" onAction="#setfive" prefHeight="70.0" prefWidth="182.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Button fx:id="buttonsix" mnemonicParsing="false" onAction="#setsix" prefHeight="73.0" prefWidth="164.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         <Button fx:id="buttonone" mnemonicParsing="false" onAction="#setone" prefHeight="63.0" prefWidth="153.0" text="1" GridPane.rowIndex="2" />
